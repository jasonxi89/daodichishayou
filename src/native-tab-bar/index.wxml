<view class="tab-bar">
  <view class="tab-bar__item {{active === 0 ? 'is-active' : ''}}" bindtap="switchToHome">
    <image class="tab-bar__icon" src="{{active === 0 ? selectedHomeIcon : homeIcon}}" mode="aspectFit" />
    <text class="tab-bar__label {{active === 0 ? 'is-active' : ''}}">抽啥吃啥</text>
  </view>
  <view class="tab-bar__divider"></view>
  <view class="tab-bar__item {{active === 1 ? 'is-active' : ''}}" bindtap="switchToIngredient">
    <image class="tab-bar__icon" src="{{active === 1 ? selectedIngredientIcon : ingredientIcon}}" mode="aspectFit" />
    <text class="tab-bar__label {{active === 1 ? 'is-active' : ''}}">有啥做啥</text>
  </view>
</view>
